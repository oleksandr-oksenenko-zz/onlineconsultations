<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="User" table="user">
    
        <id name="id" column="user_id">
            <generator class="native"></generator>
        </id>
        
        <property name="username" column="username" length="50"/>
        
        <property name="password" column="password" length="32"/>
        
        <property name="firstName" column="firstname" length="50"/>
        
        <property name="middleName" column="middlename" length="50"/>
        
        <property name="lastName" column="lastname" length="50"/>
        
        <property name="qualification" column="qualification" length="200"/>
        
        <set name="subSubjects" lazy="true" inverse="false">
            <key column="sub_subject_id"/>
            <one-to-many class="SubSubject"/>
        </set>
        
        <one-to-one name="role" class="UserRole"/>
        
    </class>
</hibernate-mapping>